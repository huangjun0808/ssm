<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weshine.dao.UserDao">

    <sql id="selectField">
        SELECT id,add_time as addTime,update_time as updateTime,nick_name as nickName,user_name as userName,email,mobile,sex,enabled
        FROM user
    </sql>
    <sql id="insertField">
        INSERT INTO user(add_time,update_time,nick_name,user_name,email,mobile,sex,enabled)
    </sql>

    <select id="get" parameterType="int" resultType="user">
        <include refid="selectField"/> WHERE id=#{id} AND enabled=1
    </select>

    <select id="getBy" resultType="user">
        <include refid="selectField"/> WHERE ${field}=#{value} AND enabled=1
    </select>

    <insert id="insert" parameterType="user" keyProperty="id" useGeneratedKeys="true">
        <include refid="insertField"/>
          VALUES (#{addTime},#{updateTime},#{nickName},#{userName},#{email},#{mobile},#{sex},#{enabled})
    </insert>

    <update id="update" parameterType="user">
        UPDATE user
        <set>
            <if test="updateTime!=null">
                update_time=#{updateTime},
            </if>
            <if test="nickName!=null">
                nick_name=#{nickName},
            </if>
            <if test="userName!=null">
                user_name=#{userName},
            </if>
            <if test="email!=null">
                email=#{email},
            </if>
            <if test="mobile!=null">
                mobile=#{mobile},
            </if>
            <if test="sex!=null">
                sex=#{sex},
            </if>
            <if test="enabled!=null">
                enabled=#{enabled},
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="remove" parameterType="int">
        DELETE FROM user WHERE id=#{id}
    </delete>

    <select id="list" parameterType="userQuery" resultType="user">
        <include refid="selectField"/>
        <where>
            <if test="nickName!=null">
                nick_name=#{nickName}
            </if>
            <if test="userName!=null">
                AND user_name=#{userName}
            </if>
            <if test="email!=null">
                AND email=#{email}
            </if>
            <if test="mobile!=null">
                AND mobile=#{mobile}
            </if>
            <if test="sex!=null">
                AND sex=#{sex}
            </if>
            <if test="enabled!=null">
                AND enabled=#{enabled}
            </if>
        </where>
    </select>
</mapper>